{
  "name": "honghong.me",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "description": "My personal website and blog built with TypeScript, Next.js, and Tailwind CSS",
  "author": "Lai Tsz Hong <info@honghong.me> (https://github.com/tszhong0411/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tszhong0411/honghong.me.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "component": "cypress open --component",
    "component:headless": "cypress run --component"
  },
  "prettier": "@tszhong0411/prettier-config",
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@octokit/rest": "^20.0.1",
    "@prisma/client": "^5.1.1",
    "@tabler/icons-react": "^2.31.0",
    "@tszhong0411/ui": "^3.0.3",
    "@tszhong0411/utils": "^3.0.3",
    "canvas-confetti": "^1.6.0",
    "contentlayer": "^0.3.4",
    "dayjs": "^1.11.9",
    "framer-motion": "^10.16.0",
    "github-slugger": "^2.0.0",
    "marked": "^7.0.4",
    "next": "^13.4.19",
    "next-auth": "^4.23.1",
    "next-contentlayer": "^0.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-medium-image-zoom": "^4.3.3",
    "react-use": "^17.4.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "0.10.0",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "sharp": "^0.32.5",
    "shiki": "^0.14.3",
    "swr": "^2.2.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@octokit/types": "^11.1.0",
    "@tailwindcss/typography": "^0.5.9",
    "@tszhong0411/eslint-config": "^1.0.15",
    "@tszhong0411/prettier-config": "^1.0.5",
    "@tszhong0411/tsconfig": "^1.0.1",
    "@types/canvas-confetti": "^1.6.0",
    "@types/mdx": "^2.0.6",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/rss": "^0.0.30",
    "@types/umami": "^0.1.2",
    "autoprefixer": "^10.4.15",
    "cypress": "^12.17.4",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.19",
    "eslint-plugin-cypress": "^2.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "prisma": "^5.1.1",
    "schema-dts": "^1.1.2",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{json,css,scss,md,mdx,js,jsx,ts,tsx,cjs,mjs}": [
      "prettier -c"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@tszhong0411/eslint-config",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    }
  }
}
